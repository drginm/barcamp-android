<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barcampmed"
    android:versionCode="4"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppStyle" >
        <activity
            android:name="com.barcampmed.ui.SplashScreenActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
 >
        </activity>
        <activity
            android:name="com.barcampmed.ui.ListUnconferencesActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.barcampmed.ui.UnconferenceDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.barcampmed.ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
        </activity>	
    </application>

</manifest>