<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ic_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"        
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_tweet" />

    <TextView
        android:id="@+id/lab_tweet_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/ic_tweet"
        android:gravity="left"
        android:linksClickable="true"  
        android:autoLink="web"
        android:textColorLink="@color/blue"
        android:text="Mauricio Andrés Cadavid Hernández. PMP: Project Management Professional - PMI USA e Ingeniero Informático de la EIA"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/lab_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lab_tweet_message"
        android:layout_below="@+id/lab_tweet_message"
        android:text="10:00 AM"
        android:textColor="@color/blue" />

</RelativeLayout>